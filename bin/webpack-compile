#! /usr/bin/env node
var exec = require('child_process').exec;
var fs = require('fs');
var path = require('path');

exec("webpack --config config/webpack/production.config.js --json", function(err, stdout, stderr) {
  var outputPath = path.resolve(__dirname, '..', 'public', 'assets', 'webpack-asset-manifest.json');
  fs.writeFile(outputPath, stdout, function(err) {
    if(err) {
      console.log(err);
    } else {
      console.log("Successfully compiled webpack assets");
    }
  });
});
